<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/theme" >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_communication_protector"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:textSize="@dimen/title"/>

        <ImageView
            android:id="@+id/iv_showpopup"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/show_popup"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:background="#EEEEEE"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_msg"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#eeeeee" 
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="30dip"
                    android:layout_height="20dip"
                    android:src="@drawable/message_comm"
                    android:scaleType="fitXY"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_communication_protector_message_interception"
                    android:textSize="@dimen/text_size_short"
                    android:layout_toRightOf="@id/iv_msg"
                    android:textColor="#000000"/>
                
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#d2d2d2" 
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_msg2"
                    android:layout_width="25dip"
                    android:layout_height="18dip"
                    android:src="@drawable/phone"
                    android:scaleType="fitXY"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_communication_protector_call_interception"
                    android:textSize="@dimen/text_size_short"
                    android:layout_toRightOf="@id/iv_msg2"
                    android:textColor="#000000"/>
                
            </RelativeLayout>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_protectrecorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>
    
    
    
   

</LinearLayout>